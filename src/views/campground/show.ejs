<%- include("../partials/header"); %>

<div class="container text-center">

    <h1> <%= campground.name %> </h1>

    <div class="row m-0 d-flex justify-content-center">
        <div class="border p-0 col-md-3 col-6">
            <img class="w-100" src="<%= campground.imageUrl %>" alt="Campground Image">
        </div>
    </div>

    <p><%= campground.description %></p>

    <a class="btn btn-info" href="/index/<%= campground._id %>/comments/new">Add New Comment</a>

    <% campground.comments.forEach(function (comment) { %>
        <p>
            <strong><%= comment.author %></strong> - <%= comment.content %>
        </p>
    <% }) %>

    <a href="/index">View All Campgrounds</a>

</div>

<%- include("../partials/footer"); %>