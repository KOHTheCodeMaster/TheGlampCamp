<%- include("../partials/header"); %>

<div class="container">

    <div class="row">
        <h1 class="col-lg-12 display-3 text-center">Edit - Create New Campground</h1>
        <div class="col-md-6 m-auto">
            <form class="mt-4" action="/index/<%= campground._id %>?_method=PUT" method="POST">

                <div class="form-group">
                    <label class="d-none" for="name"></label>
                    <input type="text" id="name" name="campground[name]" value="<%= campground.name %>"
                           class="form-control">
                </div>

                <div class="form-group">
                    <label class="d-none" for="imageUrl"></label>
                    <input type="url" id="imageUrl" name="campground[imageUrl]" value="<%= campground.imageUrl %>"
                           class="form-control">
                </div>

                <div class="form-group">
                    <label class="d-none" for="description"></label>
                    <input type="text" id="description" name="campground[description]"
                           value="<%= campground.description %>"
                           class="form-control">
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-success btn-block">Save</button>
                </div>

            </form>

            <a class="btn btn-primary btn-large" href="/index">View All Campgrounds</a>
        </div>
    </div>

</div>


<%- include("../partials/footer"); %>




