<%- include("partials/header"); %>

<div class="container">

    <div class="row">
        <h1 class="col-lg-12 display-3 text-center">Create New Campground</h1>
        <div class="col-md-6 m-auto">
            <form class="mt-4" action="/index" method="POST">

                <div class="form-group">
                    <label class="d-none" for="name"></label>
                    <input type="text" id="name" name="name" placeholder="Camp Name" class="form-control">
                </div>

                <div class="form-group">
                    <label class="d-none" for="imageUrl"></label>
                    <input type="url" id="imageUrl" name="imageUrl" placeholder="Image URL" class="form-control">
                </div>

                <div class="form-group">
                    <label class="d-none" for="description"></label>
                    <input type="text" id="description" name="description" placeholder="Description"
                           class="form-control">
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-info btn-block">Submit</button>
                </div>

            </form>

            <a class="btn btn-primary btn-large" href="/index">View All Campgrounds</a>
        </div>
    </div>

</div>


<%- include("partials/footer"); %>




