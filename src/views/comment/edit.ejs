<%- include("../partials/header"); %>

<div class="container">

    <div class="row">
        <h1 class="col-lg-12 display-3 text-center">Edit Comment</h1>
        <div class="col-md-6 m-auto">
            <form class="mt-4" action="/index/<%= campground._id %>/comments/<%= comment._id %>?_method=PUT"
                  method="POST">

                <div class="form-group">
                    <label class="d-none" for="content"></label>
                    <input type="text" id="content" name="comment[content]" value="<%= comment.content %>"
                           class="form-control">
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-info btn-block">Submit</button>
                </div>

            </form>

            <a class="btn btn-primary btn-large" href="/index">View All Campgrounds</a>
        </div>
    </div>

</div>


<%- include("../partials/footer"); %>




